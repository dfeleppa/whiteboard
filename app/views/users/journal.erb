<div class="container">
<link rel="stylesheet" href="/stylesheets/main.css" />
<link rel="stylesheet" href="/stylesheets/journal.css" />
  <header></header>

  <body>
    <style>
      body {
        background: url(../images/deadlift.jpg) no-repeat center center fixed ;
        background-size: cover ;
        height: 100%;
        position: relative;
        width: 100%;
      }
      </style>

      
      <td>
        <div style="float:left;width:50%;">
          <h3><%= current_user.first_name.capitalize%> <%= @current_user.last_name.capitalize%></h3>
        </div>
        <div style="float:right;width:50%;text-align:right;">
        <%= @current_user.email %>
        </div>
      </td>
      <br></br>
      <ul class="clear-bar">
          <li class="item-stacked">
            <div>Sex:</div>
            <div><%= @current_user.sex.capitalize %></div>
          </li>
          <li class="item-stacked">
            <div>Height:</div>
            <div><%= @current_user.height %></div>
          </li>
          <li class="item-stacked">
            <div>Weight:</div>
            <div> <%= @current_user.weight %> lbs.</div>
          </li>
          <li class="item-stacked">
            <div>Member Since:</div>
            <div> <%= @current_user.created_at.strftime("%B") %> <%= @current_user.created_at.year %></div>
          </li>
          <li class="item-stacked">
            <div>Last Updated:</div>
            <div><%= @current_user.updated_at %></div>
          </li>
        </ul> 
 
    <div class="wrapper">
    <td>
    <div style="float:left;width:50%;">
      <h3>WORKOUT JOURNAL</h3>
    </div>
    <div style="float:right;width:50%;text-align:right;">
    <a href="/users/create_entry">Log Workout</a>
    </div>
    </td>
    <br></br>
    <% @user_posts.each do |user_post| %>
      <h4><a href="/users/user_posts//<%= user_post.id %>"><%=user_post.created_at.to_formatted_s(:long_ordinal)%></a></h4>
      <strong><%= user_post.workout_name %></strong> - <%=user_post.is_rx?%> - Score: <%=user_post.score%>
      <br></br>
    <% end %>
    </div>
  </body>
</div>



 
