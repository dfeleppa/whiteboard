      <br></br>
      <label for="admin_workout" vertical-align:"top">Workout : </label>
      <textarea class="journal-entry-text" name="admin_workout"> <%= @admin_workout.admin_workout %> </textarea>
      <br></br>
    </div>
    <div class="submit-form">
      <input class="submit-button" type="submit" name="" value="Submit" style="width: 200px;">
    </div>
  </form>
  
 
